@model EverMediaDiplom.ViewModels.UserManagementViewModel
@{
    ViewData["Title"] = "Управление пользователями";
}

<h1>Управление пользователями</h1>

<form method="get" class="admin-search-form">
    <input type="text" asp-for="SearchQuery" placeholder="Поиск пользователей...">
    <select asp-for="RoleFilter">
        <option value="">Все роли</option>
        <option value="Admin">Администраторы</option>
        <option value="Photographer">Фотографы</option>
        <option value="Client">Клиенты</option>
    </select>
    <button type="submit" class="btn btn-primary">Фильтровать</button>
</form>

<table class="admin-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>